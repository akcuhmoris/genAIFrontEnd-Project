model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id          Int    @id @default(autoincrement())
  name        String
  codeUrl     String
  firebaseUid String @default("unknown")
  User        User?  @relation(fields: [userId], references: [id])
  userId      Int?
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
